{
  "manifest_version": 3,
  "name": "Word and Character Count",
  "version": "1.0",
  "description": "This extension counts the words and characters in the text and displays the frequency and percentage.",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
